{% extends 'base.html.twig' %}

{% block body %}
<br/>
<div class="container">
	<h1>Nos produits Bilemo</h1>
	<form class="text-right" action="#pathproduces" method="POST">
		<input type="text" name="keyword" placeholder="keyword">
		<button type="submit" class="btn btn-primary">Search</button>
	</form>

	{% if users|length > 0 %} <!-- Vérification si il y a des produits dans la liste -->
	<div class="row">
			{{ dump(users) }}

			

			<div class="container">
				<div class="row">
					 <header style="margin: 3rem 0;" class="col-12">
							<h2 class="display-4">Voici la liste des utilisateurs Bilemo</h2>
					 </header>

					 {% for user in users %}
					 <div class="col-12">
							<a href="{{ path('get_user', {'id': user.id}) }}"><h2>{{ user.email }} ici</h2></a>
					 </div>
				
					 {% endfor %}
				</div>
			</div>
				
			
	</div>

	{# pagination
	<div class="row justify-content-center">
		<nav aria-label="Page navigation">
		  <ul class="pagination justify-content-center">
		    <li class="page-item">
		      <a class="page-link" href="#" aria-label="Previous">
		        <span aria-hidden="true">&laquo;</span>
		        <span class="sr-only">Previous</span>
		      </a>
		    </li>
		  	{% for page in range(1, totalPages) %}
		    	{% if page == actualPage %}
						<li class="page-item active"><a class="page-link" href="{{ path('users', {'offset': (page-1)*limit} )}}">{{ page }}</a></li>
					{% else %}
						<li class="page-item"><a class="page-link" href="{{ path('users', {'offset': (page-1)*limit} )}}">{{ page }}</a></li>
		    	{% endif %}
		  	{% endfor %}
		    <li class="page-item">
		      <a class="page-link" href="#" aria-label="Next">
		        <span aria-hidden="true">&raquo;</span>
		        <span class="sr-only">Next</span>
		      </a>
		    </li>
		  </ul>
		</nav>
	</div> #}

</div>
{% else %}
<div class="col-12">
		<div class="row">
			{# text #}
			<div class="col-8">
				<div class="row">
						Aucun produit n'est répertorié
				</div>
			</div>
		</div>
	</div> 
	
{% endif %}


{% endblock %}
