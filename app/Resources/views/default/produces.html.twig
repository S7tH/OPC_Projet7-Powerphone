{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent()}}
<style type="text/css">
	.producesRow {
		margin: 1.5rem 0;
	}
</style>
{% endblock %}

{% block body %}

<div class="container">
	<h1>Produit Bilemo</h1>
	<form class="text-right" action="#pathproduces" method="POST">
		<input type="text" name="keyword" placeholder="keyword">
		<button type="submit" class="btn btn-primary">Search</button>
	</form>

	{# {% if produces.data|length > 0 %} <!-- Vérification si il y a des produits dans la liste --> #}
	<div class="row">
		{% for produces in produces.data %}
		<div class="col-12 producesRow">
			<div class="row">
				{# text #}
				<div class="col-8">
					<div class="row">
						<div class="col-12">
							<a href="{{ path('get_produces', {'id': produces.id}) }}"><h2>{{ produces.title }}</h2></a>
						</div>
						<div class="col-12">
							<p>{{ produces.shortDescription }}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
	{# pagination #}
	<div class="row justify-content-center">
		<nav aria-label="Page navigation">
		  <ul class="pagination justify-content-center">
		    <li class="page-item">
		      <a class="page-link" href="#" aria-label="Previous">
		        <span aria-hidden="true">&laquo;</span>
		        <span class="sr-only">Previous</span>
		      </a>
		    </li>
		   {#} {% for page in range(1, totalPages) %}
		    	{% if page == actualPage %}
				<li class="page-item active"><a class="page-link" href="{{ path('produces', {'offset': (page-1)*limit} )}}">{{ page }}</a></li>
				{% else %}
				<li class="page-item"><a class="page-link" href="{{ path('produces', {'offset': (page-1)*limit} )}}">{{ page }}</a></li>
		    	{% endif %}
		   #} {% endfor %}
		    <li class="page-item">
		      <a class="page-link" href="#" aria-label="Next">
		        <span aria-hidden="true">&raquo;</span>
		        <span class="sr-only">Next</span>
		      </a>
		    </li>
		  </ul>
		</nav>
	</div>
	{# {% else %}
		<p>Aucun produit ne correspond à vos critères.</p>
	{% endif %} #}
</div>


{% endblock %}
