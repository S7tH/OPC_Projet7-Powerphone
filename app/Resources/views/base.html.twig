<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Welcome!{% endblock %}</title>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                {% block body %}{% endblock %}
                {% if app.user %}
                    <a href="{{ path('logout') }}" type="button" class="btn btn-danger btn-lg"><i class="fa fa-sign-out"></i> Logout</a>
                {% else %}
                    <a href="http://127.0.0.1:8001/oauth/v2/auth?client_id={{ bilemo_client_id }}&amp;response_type=code&amp;scope=user&amp;state={{ state }}&amp;redirect_uri={{ url('admin_auth') }}" type="button" class="btn btn-info btn-lg"><i class="glyphicon glyphicon-phone"></i> S'authentifier avec Bilemo</a>
                {% endif %}
            </div>
            <footer class="footer"><p>&copy; {{ "now"|date("Y") }}</p></footer>
        </div>
    </body>
</html>

{# &amp;scope=user&amp;state='.sha1(uniqid(mt_rand(), true)) #}